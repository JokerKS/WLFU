@model IEnumerable<JokerKS.WLFU.Entities.Product.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products management</h2>

<table class="table">
    <tr>
        <th style="min-width:220px;">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPublished)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designer.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableAmount)
        </th>
        <th></th>
    </tr>

@foreach (var product in Model) {
    <tr>
        <td>
            <a href="@Url.Action("ProductDetails", "Admin", new { productId = product.Id })">
                @Html.DisplayFor(model => product.Name)
            </a>
        </td>
        <td style="text-align: center;">
            @Html.DisplayFor(modelItem => product.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => product.Category.Name)
        </td>
        <td style="text-align: center;">
            @Html.DisplayFor(modelItem => product.IsPublished)
        </td>
        <td style="text-align: center;">
            @Html.DisplayFor(modelItem => product.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => product.Designer.UserName)
        </td>
        <td style="text-align: center;">
            @Html.DisplayFor(modelItem => product.AvailableAmount) / @Html.DisplayFor(modelItem => product.Amount)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = product.Id })
        </td>
    </tr>
}

</table>
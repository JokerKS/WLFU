@model IEnumerable<JokerKS.WLFU.Entities.Product.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products management</h2>

<table class="table">
    <tr>
        <th style="min-width:220px;">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPublished)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designer.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableAmount)
        </th>
        <th></th>
    </tr>

@foreach (var product in Model)
{
    <tr>
        <td>
            <a href="@Url.Action("ProductDetails", "Admin", new { productId = product.Id })">
                @Html.DisplayFor(item => product.Name)
            </a>
        </td>
        <td style="text-align: center;">
            @Html.DisplayFor(item => product.Price)
        </td>
        <td>
            @Html.DisplayFor(item => product.Category.Name)
        </td>
        <td style="text-align: center;">
            @Html.DisplayFor(item => product.IsPublished)
        </td>
        <td style="text-align: center;">
            @Html.DisplayFor(item => product.IsActive)
        </td>
        <td>
            @Html.DisplayFor(item => product.Designer.UserName)
        </td>
        <td style="text-align: center;">
            @Html.DisplayFor(item => product.AvailableAmount) / @Html.DisplayFor(item => product.Amount)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteProduct", new { id = product.Id })
        </td>
    </tr>
}
</table>